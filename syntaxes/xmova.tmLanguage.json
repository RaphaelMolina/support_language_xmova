{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Xmova",
	"scopeName": "source.xmv",
	"patterns": [
		{
            "comment": "Azul Escuro - Comentário",
            "name": "comment.line.double-slash",
            "match": "//.*$"
        },
        {
            "comment": "Amarelo - String",
            "begin": "\"",
            "end": "\"",
            "name": "string.quoted.double",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
        },
        {
            "comment": "Roxo - Variável Global",
            "name": "variable.language",
            "match": "\\b([_][A-Za-z]*)\\b"
        },
        {   
            "comment": "Vermelho - Caracteres Especiais",
            "name": "markup.deleted",
            "match": "[^a-zA-Z0-9À-Üà-ü]|\\[|\\]|\\(|\\)|{|}"
        },
        {   
            "comment": "Rosa - Palavras Chaves",
            "name": "keyword",
            "match": "\\b(appCode|alertTimer|darkTheme|dateOneScreen|diskMinSpaceMB|diskToleranceSpaceMB|retainLogFilesInDisk|multiLang|networkWait|networkTimeout|notResetWifi|offlineDate|periodicSync|simulateCorruptedSource|confirmDeviceDateHour|title|main|entity|message|messageField|dateField|fromField|tableLayout|webView|fullScreen|afterSync|afterUpdate|beforeUpdate|buffer|bluetooth|camera|clearOptionMenu|settingsOptionMenu|defaultFormat|getDeviceName|location|Location|logo|mainInfo|messageAlert|networkReset|onStart|onExit|pictureAnytime|reader|support|syncOptionMenu|serverUrl|updateUrl|syncConfig|install|name|SEQ_DB_DEVICE_MASTER|SEQ_DB_DEVICE|Auth|Vars|Constants|InstallData|EntityLabel|FieldOnlineValidateFail|FieldOnlineValidateError|FieldLabel|ScreenActionLabel|Main|CrudCreateConfirmMessage|CrudOptionsActionLabel|BooleanInputScreenYesActionLabel|BooleanInputScreenNoActionLabel|BooleanInputScreenBackActionLabel|FixedKeyAppVersion|FixedKeyMsgEmptyList|FixedKeyCrudCreateConfirmMessage|FixedKeyInputKeyboardDecimalSymbol|EmptyVerify|notFill|notfill|notShowNo|ignoreExternal|autofill|notBack|notShowYes|inlineData|cleanupDays|server|maxCacheTime|disableNotifyMessage|cleanupDays|langcustom|timeTypeField|onlineFlagCreate|record|hide|maxLength|onGetDefaultInputValue|notSavedMessage|autoFillWhenOneItem|uuid|loop|acceptEmpty|notUseAsFilter|transient|add|onlineFlagFinish|setAlertTimer|totalTime|show|minSpeed|actionBarSubtitle|numerickeyboard|notFormatThousand|memory|descriptionFields|searchFields|emptyVerify|favorite|autoInitializeNew|finishOnEndLoop|backgroundIn|hasFixedPoint|externalName|getWeekDay|messageScheduled|notSync|defaultValue|viewAsColorIcon|toggleColorIcon|inactive|chave|confirm|decimalSize|id)\\b"
        },
        {
            "comment": "Rosa Negrito - Palavras Chaves Valores",
            "name": "keyword.operator.new",
            "match": "\\b(timerInterval|Device|Manual|syncInterve|AuthInput|fillAuth|Finish|tipoDataFim)\\b"
        },
        {
            "comment": "Rosa - Condicionais",
            "name": "keyword.control",
            "match": "\\b(if|else|for|while|return|in)\\b"
        },
        {
            "comment": "Verde - Palavras Chaves",
            "name": "entity.other.attribute-name",
            "match": "\\b(views|events|actions|getRecord|fontssize|titlefontssize|button|label|style|primary|margins|onClick|default|success|warning|info|danger|beforeInit|beforeClose|aligments|loadUrl|postVars|post|onHttpError|recordList|recordDetail|onValidate|OnStart|fieldEvents|beforeFinish|afterFinish|afterFill|onlineValidate|fillCondition|afterInsert|autoFill|filterListRecord|getInputScreenLabel|screens|isVisible|fill|BeforeSyncFirstRecord|beforeSyncSave)\\b"
        },
        {
            "comment": "Laranja - Palavras Chaves",
            "name": "markup.changed",
            "match": "\\b(maxFileSizeMB|maxFilesToKeep|saveBinary|sender|receiver|fileReceiver|password|restorePassword|maxBackupDays|quality|resolution|format|minTime|minDistance|minLastTime|tracking|onInsert|phoneNumber|hidePendingRecords|soundLoop|vibrateTime|vibrationLoop|sound|none|BarcodeError|AlertTimer|BarcodeRead|camera|minQuality|types|sizes|type|required|minBearing|syncInterval|waitForNetworkTimeout|connectionTimeout|readTimeout|httpStatusCode|originalCode|fields|labels|Back|sync|exit|ok|Ok|getRecords|inputEntity|listRecord|lang|onGetItemIconColor|OnGetItemBackgroundColor|stopAlertTimer|stopSound|cancelSchedule|save|setStatusColor|concat|SumField|toast|select|from|UPDATE|SET|INSERT|INTO|VALUES|SelectFirst|FROM|From|Where|WHERE|where|selectFirst|AND|and|dateToMilli|vars|simpleDateFormat|background|actionbarsubtitle|playSound|yesLabel|noLabel|timeout|timeoutExceededValue|backOnlyAfterNo|CrudBack|crud|setInfoView|dropTable|schedule|time|finishRecord|addDate|Select)\\b"
        },
        {
            "comment": "Laranja Negrito - Valores",
            "name": "markup.bold",
            "match": "\\b(PARTIAL|EAN8|UPCE|ISBN10|UPCA|EAN13|ISBN13|I25|DATABAR|DATABAR_EXP|CODABAR|CODE39|PDF417|QRCODE|CODE93|CODE128|manualDecimal|logo_simova|LEFT|CENTER|RIGHT|verifyEmptyEntity|out|tipoData|currentDate|generateuuid|custom|cam|BarcodeBeep|beforeInstall)\\b"
        },
        {
            "comment": "Azul Claro - Tipo de Dados",
            "name": "support",
            "match": "\\b(path|double|date|fillAuth|Batterylevel|Binary|boolean|Boolean|Bool|Bytes|Date|Decimal|Double|Entity|Float|inc|Integer|int|List|Location|Long|long|Now|now|ReceivedFile|string|String|Str|Text|text|picture|decimal)\\b"
        },
        {
            "comment": "Azul Claro - Números",
            "name": "markup.underline.link",
            "match": "\\b\\d+\\b"
        },
        {
            "comment": "Roxo - Log e Valores",
            "name": "support.constant",
            "match": "\\b(log|true|false|null|NULL)\\b"
        },
        {
            "comment": "Roxo - Entidades",
            "name": "markup.heading",
            "match": "\\b[A-Z]\\w*\\b"
        }
	]
}